    <h1>PID Tuning</h1>

    <div id="pid_plot" style="width:800px;height:400px;"></div>


<script type="text/javascript">
$(function () {
    var maxPoints = 5 * 50;
    var data = [];

    function getData() {
      var res = []
      for (var i = 0; i < data.length; ++i)
         res.push([i, data[i]])
      return res;
    }
    // setup plot
    var options = {
        series: { shadowSize: 0 }, // drawing is faster without shadows
        yaxis: { min: 0, max: 100 },
        xaxis: { show: false }
    };
    var plot = $.plot($("#pid_plot"),[data], options);

   function push(newD) {
        if (data.length > 0)
            data = data.slice(1);

        while (data.length < totalPoints) {
            var prev = data.length > 0 ? data[data.length - 1] : 0
            var y = newD
            if (y < 0)
                y = 0;
            if (y > 100)
                y = 100;
            data.push(y);
        }

        plot.setData([getData()]);
        // since the axes don't change, we don't need to call plot.setupGrid()
        plot.draw();
        
    }

   var socket = io.connect('http://localhost');
    socket.on('update', function (dataIn) {
      console.log(dataIn);
    });

});
</script>

